            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/chapter3Text"
            android:textSize="18sp"
            android:background="@color/chapterBtn_background_color"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/buttonD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/chapter4Text"
            android:textSize="18sp"
            android:background="@color/chapterBtn_background_color"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:onClick="onClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/chapter5Text"
            android:textSize="18sp"
            android:background="@color/chapterBtn_background_color"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/chapter6Text"
            android:textSize="18sp"
            android:background="@color/chapterBtn_background_color"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/chapter7Text"
